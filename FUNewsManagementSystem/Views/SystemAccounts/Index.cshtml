@model IEnumerable<FUNewsManagementSystem.Models.SystemAccount>

@{
    ViewData["Title"] = "Manage Accounts";
}

<h1><i class="fas fa-users"></i> Manage Accounts</h1>

<!-- Search Bar -->
<form method="get" class="mb-3 d-flex">
    <input type="text" name="searchQuery" class="form-control me-2" placeholder="Search by Account Name" value="@ViewData["CurrentFilter"]" />
    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-sync-alt"></i> Reset</a>
</form>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-user-plus"></i> Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AccountName)</th>
            <th>@Html.DisplayNameFor(model => model.AccountEmail)</th>
            <th>Role</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string roleDisplay = item.AccountRole == 1 ? "Staff" : item.AccountRole == 2 ? "Lecturer" : "Unknown";

            <tr>
                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                <td>@Html.DisplayFor(modelItem => item.AccountEmail)</td>
                <td>@roleDisplay</td>
                <td>
                    <div class="input-group">
                        <input type="password" class="form-control password-field" value="@item.AccountPassword" readonly />
                        <button class="btn btn-outline-secondary toggle-password" type="button">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        document.querySelectorAll(".toggle-password").forEach(button => {
            button.addEventListener("click", function () {
                let passwordField = this.previousElementSibling;
                let icon = this.querySelector("i");

                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    icon.classList.remove("fa-eye");
                    icon.classList.add("fa-eye-slash");
                } else {
                    passwordField.type = "password";
                    icon.classList.remove("fa-eye-slash");
                    icon.classList.add("fa-eye");
                }
            });
        });
    </script>
}
