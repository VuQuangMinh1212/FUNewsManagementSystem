@model FUNewsManagementSystem.Models.Tag

@{
    ViewData["Title"] = "Delete Tag";
}

<h1 class="text-danger"><i class="fas fa-trash"></i> Delete Tag</h1>
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @ViewData["SuccessMessage"]
    </div>

    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Tags")';
        }, 1000);
    </script>
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i> @ViewData["ErrorMessage"]
    </div>
}

<h3 class="text-warning">Are you sure you want to delete this tag?</h3>

<div class="card shadow-sm border-danger">
    <div class="card-body">
        <h4 class="card-title text-danger">Tag Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TagName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TagName)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Note)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Note)</dd>
        </dl>

        <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="TagId" />

            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to permanently delete this tag?");
        }
    </script>
}
