@model IEnumerable<FUNewsManagementSystem.Models.NewsArticle>

@{
    ViewData["Title"] = "News Articles";
}

<h1>News Articles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Report" class="btn btn-secondary">Report</a>
    }
</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NewsTitle)</th>
            <th>@Html.DisplayNameFor(model => model.Headline)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.NewsContent)</th>
            <th>@Html.DisplayNameFor(model => model.NewsSource)</th>
            <th>@Html.DisplayNameFor(model => model.NewsStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.Headline)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.NewsContent)</td>
                <td>@Html.DisplayFor(modelItem => item.NewsSource)</td>
                <td>@(item.NewsStatus ? "Published" : "Draft")</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryId)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy.AccountId)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-info btn-sm">Details</a>

                    @if (User.IsInRole("Staff"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.NewsArticleId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
