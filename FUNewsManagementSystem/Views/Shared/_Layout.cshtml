<!DOCTYPE html>
<html>
<head>
    <title>FUNewsManagementSystem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            padding: 10px 15px;
            transition: background 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 5px;
            }


        .btn {
            border-radius: 5px;
            transition: all 0.3s;
        }

            .btn:hover {
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">FUNews</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="/Articles">Bài viết</a></li>
                <li class="nav-item"><a class="nav-link" href="/Categories">Danh mục</a></li>
                <li class="nav-item"><a class="nav-link" href="/Account/Profile">Hồ sơ</a></li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Account/Logout">Đăng xuất</a></li>
            </ul>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
</body>
</html>

