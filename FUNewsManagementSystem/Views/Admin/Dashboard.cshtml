@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    
    .admin-dashboard {
        text-align: center;
        padding: 30px;
    }

        .admin-dashboard h1 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 20px;
        }

    
    .stats {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    
    .stat-card {
        background: white;
        padding: 20px;
        width: 250px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .stat-card h3 {
            margin-bottom: 10px;
            font-size: 1.2rem;
            color: #007bff;
        }

        .stat-card p {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
        }

       
        .stat-card:hover {
            transform: translateY(-5px);
        }
</style>

<div class="admin-dashboard">
    <h1>Dashboard</h1>
    <div class="stats">
        <div class="stat-card">
            <h3>Tổng số bài viết</h3>
            <p>120</p>
        </div>
        <div class="stat-card">
            <h3>Tổng số tài khoản</h3>
            <p>35</p>
        </div>
    </div>
</div>