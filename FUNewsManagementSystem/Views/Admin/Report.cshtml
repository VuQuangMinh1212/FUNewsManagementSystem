@{
    ViewData["Title"] = "Thống kê báo cáo";
}
<style>
    
    .report-section {
        text-align: center;
        padding: 30px;
    }

        .report-section h1 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 20px;
        }

    
    .filter-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

        .filter-bar label {
            font-size: 16px;
            font-weight: bold;
        }

        .filter-bar input {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .filter-bar button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            color: white;
            background-color: #007bff;
        }

            .filter-bar button:hover {
                background-color: #0056b3;
            }

   
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        table th, table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #0056b3;
            color: white;
        }

        table tr:hover {
            background-color: #f5f5f5;
        }

</style>

<div class="report-section">
    <h1>Thống kê báo cáo</h1>

    <div class="filter-bar">
        <label>Chọn thời gian:</label>
        <input type="date" />
        <input type="date" />
        <button class="primary">Lọc</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Tiêu đề bài viết</th>
                <th>Ngày tạo</th>
                <th>Tác giả</th>
                <th>Lượt xem</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Bài viết 1</td>
                <td>2025-02-10</td>
                <td>Nguyễn Văn A</td>
                <td>1500</td>
            </tr>
            <tr>
                <td>Bài viết 2</td>
                <td>2025-02-12</td>
                <td>Trần Thị B</td>
                <td>1200</td>
            </tr>
        </tbody>
    </table>
</div>
