@{
    ViewData["Title"] = "Danh sách bài viết";
}
<style>
    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-size: 16px;
        }

        .table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tr:hover {
            background-color: #e9ecef;
            transition: 0.3s ease;
        }
</style>

<h2>Danh sách bài viết</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Nguồn</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Bài viết 1</td>
            <td>Mô tả ngắn về bài viết 1...</td>
